<%= form_for(@section, :remote => true) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag(:clazz_id, @section.clazz_id ) %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>

  <div class="float-down">
    <div style="float: right;">
      <%= f.submit "Create New Section", :id => "section-create-submit", :onclick => "$( '#popup' ).dialog( 'close' );"%>
      <%= popup_cancel.html_safe %>
    </div>
  </div>
<% end %>
