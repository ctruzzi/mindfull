<div class="header">
	<% if @clazz.nil? == true %>
		<%= logo %>
	<% else %>
		<div id="left-nav">
			<div style="height: 100%; width: 20px; float:left;"> </div>
			<div style="padding-left: 10px; float: left;">
				<h3><%= @clazz.name %></h3>
				<p id="header-page-name" style="color:white;">page</p>
			</div>
			<%= link_to '', root_path %>
			<script type="text/javascript">
				$("#left-nav").click(function(){
				     window.location=$(this).find("a").attr("href");
				     return false;
				});
			</script>
		</div>
	<% end %>
	
	<div class="right-nav">
		<div id="save-button" class="button" style="float: right">
			SAVE
		</div>
		<div id="new-button" class="button" style="float: right">
			NEW
		</div>
	</div>
</div>
