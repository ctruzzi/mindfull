<!DOCTYPE html>
<html>
<head>
  <title><%= title %><</title>
  <%= render 'layouts/stylesheets' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<% if @hide.nil? %>
			<%= render 'layouts/header' %>
		<% end %>
		
		<% flash.each do |key, value| %>
			<div class="flash <%= key %>"><%= value %></div>
		<% end %>
		
		<!-- This is where the body is  -->
		<section class="round">
			<%= yield %>
		</section>
		<%= debug(params) if Rails.env.development? %>
	</div>
	<!--style="display:none;" -->
	<div id="ajax_callbacks" > 

	</div>
</body>
</html>
