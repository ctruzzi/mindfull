<!DOCTYPE html>
<html>
<head>
  <title><%= title %><</title>
  <%= render 'layouts/stylesheets' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
		<% if @hide.nil? %>
			<%= render 'layouts/header' %>
		<% end %>
		
		<% flash.each do |key, value| %>
			<div class="flash <%= key %>"><%= value %></div>
		<% end %>
		
		<!-- This is where the body is  -->
		<div class="clear"></div>
		<%= yield %>
		<div class="clear"> </div>
		<%= debug(params) if Rails.env.development? && false %>
	</div>
	<div id="popup"></div>
</body>
</html>
